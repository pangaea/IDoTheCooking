<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IDoTheCooking" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">#009688</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/holo_blue_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="homeRecipeTitle">
        <item name="android:textSize">20pt</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="homeRecipeRecentTitle">
        <item name="android:textSize">10pt</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="homeListsTitle">
        <item name="android:textSize">16pt</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="homePanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:layout_height">match_parent</item>-->
        <!--        <item name="android:layout_weight">0.5</item>-->
        <!--        <item name="android:layout_margin">10dp</item>-->
        <item name="android:orientation">vertical</item>
        <!--        <item name="android:isScrollContainer">true</item>-->
    </style>

    <style name="recipeHolder">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="recipeGenButton" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="icon">@mipmap/generative</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="iconGravity">start</item>
    </style>

    <style name="recipeQuestionnaireButton" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="icon">@android:drawable/stat_notify_chat</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="iconGravity">start</item>
    </style>

    <style name="homeAddButton" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="icon">@android:drawable/ic_input_add</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="iconGravity">start</item>
    </style>

    <style name="homeListButton" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="icon">@android:drawable/ic_menu_view</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="iconGravity">start</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="backupButton" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="icon">@android:drawable/stat_sys_upload</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="restoreButton" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="icon">@android:drawable/stat_sys_download</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="viewRecipeDetails"></style>

    <style name="viewRecipeIngredientsTitle">
        <item name="android:textSize">10pt</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="shoppingListItem">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Theme.IDoTheCooking.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="Theme.IDoTheCooking.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IDoTheCooking.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="Base.Theme.IDoTheCooking" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="RecipeIngredientDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_gravity">center</item>
        <!-- NOPE!!!!! -->
        <item name="android:layout_width">200dp</item>
        <!-- NOPE!!!!! -->
        <item name="android:layout_height">600dp</item>
    </style>

    <style name="RecipeLibraryList">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="backupAlert">
        <item name="android:background">#F6B6CC</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="backupAlertTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">800</item>
    </style>
    <style name="backupAlertMessage">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="backupAlertLink">
        <item name="android:textColor">#2872AE</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>