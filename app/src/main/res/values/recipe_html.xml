<?xml version="1.0" encoding="utf-8"?>
<resources>

<string name="html_recipe_ingredient">
<![CDATA[
<tr>
    <td><div></div></td>
    <td><b>{{amount}}</b> {{name}}</td>
</tr>
]]>
</string>

<string name="html_recipe_direction">
<![CDATA[
<tr>
    <td valign="top"><div class="vertical-line" ></div><div class="directions_bullet">{{step}}</div></td>
    <td><div>{{content}}</div></td>
</tr>
]]>
</string>

<string name="html_recipe">
<![CDATA[
<style>
 .recipe {
    font: 16px Arial, sans-serif;
 }
 .general_info {
    padding-bottom: 20px;
 }
 .general_info img {
    float: left;
    padding-right: 10px;
 }
.vertical-line{
    width:0px;
    z-index:-1;
    border-right: thick solid #666;
    position: fixed;
    height: 100%;
    left: 32px;
}
table.ingredients_table tr > td {
    vertical-align: top;
}
table.ingredients_table tr > td:first-child div{
    border-radius: 50%;
    width: 4px;
    height: 4px;
    padding: 4px;
    z-index:10;
    background: #29aea1;
    border: 2px solid #666;
    color: #666666;
    text-align: center;
}
table.directions_table tr > td:nth-child(2) {
    vertical-align: top;
}
table.directions_table tr > td:nth-child(2) div {
    padding-top: 14px;
    padding-left: 8px;
    font: 16px Arial, sans-serif;
}
table.directions_table .directions_bullet {
    border-radius: 50%;
    width: 26px;
    height: 26px;
    padding: 8px;
    z-index:10;
    background: #03dac5;
    border: 2px solid #666;
    color: #666666;
    text-align: center;
    font-size: 26px;
}
h3 {
    clear: both;
}
</style>
<div class="recipe">
<div class="general_info">
    {{image}}
    <h2>{{title}}</h2>
    <p>{{description}}</p>
    <p><b>Servings:</b> {{servings}}</p>
    <p><b>Categories:</b> {{categories}}</p>
</div>
<h3>Ingredients:</h3>
<table class="ingredients_table">
{{ingredients}}
</table>
<h3>Directions:</h3>
<table class="directions_table">
{{directions}}
</table>
</div>
]]>
</string>
</resources>